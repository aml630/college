<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Students and Courses</title>
  </head>
  <body>
    <h1>Students and Courses</h1>
    <h2>South Eastern Oregon State Directional Charter State University</h2>
    <hr />

    <h2>Add Student</h2>
    <form action = "/" method = "post">
      <input name = "student" type = "text" placeholder="Student Name"></input>
      <label>Date of enrollment</label>
      <input name = "studentDate" type = "date"></input>
      <button>Add Student</button>
    </form>


      <ul>
      @foreach (var student in Model)
      {
        <li><a href="/student_courses/@student.GetId()">@student.GetName()</a> | enrolled on: @student.GetDate().ToString("MM/dd/yyyy")</li>
      }
      </ul>

    <h4><a href="/course_list">Course list</a></h4>

  </body>
</html>
