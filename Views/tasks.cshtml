
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="/content/css/styles.css" media="screen" title="no title" charset="utf-8">
    <script type="text/javascript" src="https://code.jquery.com/jquery-git2.min.js"></script>
    <title>Best Restaurants</title>
  </head>
<body>
  <h1>To Do List</h1>
  <hr />
  <h2>Tasks:</h2>
  @if (Model.Count != 0)
  {
    <ul>
      @foreach (var task in Model)
      {


          <!-- <input type="checkbox"  checked value = 1>IS IT DONE????????????</input> -->
          if(@task.GetCompletion()==0)
          {
            <li class = "unchecked"><a href='/tasks/@task.GetId()'>@task.GetDescription()</a></li>

        <form action = "/tasks/@task.GetId()" method = "post">
          <input type="hidden" name="_method" value="PATCH">
          <input type='hidden' name="checkbox" value= 1 ></input>

          <!-- <input type="checkbox"  name = "checkbox" value = 1></input> -->
        <button type = "submit">Finished</button>
        </form>
        }

      if(@task.GetCompletion()==1)
      {
        <li id = "crossedOut"><a href='/tasks/@task.GetId()'>@task.GetDescription()</a></li>

        <form action = "/tasks/@task.GetId()" method = "post">
          <input type="hidden" name="_method" value="PATCH">
           <input type='hidden' name="checkbox" value= 0 ></input>
          <!-- <input type="checkbox" name = "checkbox"  value = 0></input> -->
        <button type = "submit">Un-Finished</button>
        </form>
      }
      else{


      }


      }
    </ul>
  }




  <h4><a href="/tasks/new">Add new task</a></h4>
  <h4><a href="/">Return home</a></h4>
</body>
</html>
